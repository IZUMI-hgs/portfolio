<%= form_with(model: @partner, local: true) do |form| %>  

    <div class="container">
    <div class="row">
   <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
   <h1>お相手登録</h1>

    <div class="form-group">
    <%= form.label :名前 %>
    <%= form.text_field :name,class: 'form-control'%>
    </div>
  
    <div class="form-group">
    <%= form.label :紹介元 %>
    <%= form.text_field :referral_source, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :年齢 %>
    <%= form.number_field :age, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :仕事 %>
    <%= form.text_field :work, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :趣味 %>
    <%= form.text_field :hobby, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :休日 %>
    <%= form.text_field :holiday, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :収入 %>
    <%= form.text_field :income, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :アレルギー %>
    <%= form.text_field :allergy, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :好きなポイント %>
    <%= form.text_field :like, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :う〜んなポイント %>
    <%= form.text_field :not_fit, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= form.label :備考 %>
    <%= form.text_field :note, class: 'form-control' %>
    </div>
  
    <%= form.submit class: 'btn btn-primary'%>

    <div class="text-center">
        <%= link_to 'Back', partners_url %>
       
        </div>
    </div>
    </div>
    </div>
<% end %>
  


